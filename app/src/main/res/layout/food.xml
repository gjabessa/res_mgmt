<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content"
                                              android:orientation="vertical"
                                              android:layout_margin="15dp"
                                              xmlns:tools="http://schemas.android.com/tools">
    <ImageView
            android:id="@+id/menu_image"
            android:layout_width="150dp"
            android:layout_height="120dp" tools:srcCompat="@tools:sample/avatars"
            android:layout_weight="1"/>
    <TextView
            android:id="@+id/menu_name"
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="20sp" android:layout_weight="1"/>
    <CheckBox
            android:text="Add" android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/checkBox"/>
</android.support.v7.widget.LinearLayoutCompat>